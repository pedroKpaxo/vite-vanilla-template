{
  "name": "base-vite",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "prettier --check .",
    "format": "prettier --write .",
    "lint:staged": "npx lint-staged",
    "prepare": "husky install"
  },
  "devDependencies": {
    "lint-staged": "^13.2.1",
    "prettier": "^2.8.7",
    "sass": "^1.61.0",
    "typescript": "^4.9.3",
    "vite": "^4.2.0"
  },
  "dependencies": {
    "husky": "^8.0.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged"
    }
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown",
    "*.ts": "npx tslint"
  }
}